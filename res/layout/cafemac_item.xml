<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
      	android:layout_width="match_parent"
      	android:layout_height="match_parent">
     <TextView  
      	android:background="#000000"
        android:id="@+id/day_header"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:textStyle="bold"  
        android:typeface="serif"  
        android:textSize="22dp"  
        android:textColor="#ffffff"  
        android:gravity="center"/>  
  	<ScrollView
  		android:layout_below="@+id/day_header"
  		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableLayout
			android:id="@+id/cafemac_table"
		  	android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TableRow
				android:background="@drawable/action_item_selected"
	        	android:gravity="center_horizontal">
				<LinearLayout
					android:id="@+id/lunch_layout"
					android:layout_width="fill_parent"
					android:layout_height="match_parent"
					android:gravity="center_horizontal">
			        <TextView  
			            android:id="@+id/lunch_header"  
			            android:layout_width="match_parent"  
			            android:layout_height="match_parent"  
			            android:textStyle="bold"  
			            android:typeface="serif"  
			            android:textSize="18dp"  
			            android:textColor="#000000"
			            android:text="Lunch"  
			            android:gravity="center"  
			            android:layout_span="6"/>  
	            </LinearLayout>
            </TableRow>
            <TableRow>
            	<TextView
			    	android:scrollHorizontally="false"
				   	android:id="@+id/lunch_text"
				   	android:layout_width="fill_parent"
				   	android:layout_height="wrap_content" 
				   	android:inputType="textMultiLine"
				   	android:layout_weight="1"
				   	android:ellipsize="none"
				   	android:textColor="#000000"
				   	android:textSize="14dp"
				   	android:background="#ffffff"
				   	android:gravity="center"/>
            </TableRow>
			<TableRow
				android:background="@drawable/action_item_selected"
				android:layout_height="10dp"
	        	android:gravity="center_horizontal">
				<LinearLayout
					android:id="@+id/dinner_layout"
					android:layout_width="fill_parent"
					android:layout_height="match_parent"
					android:gravity="center_horizontal">
			        <TextView  
			            android:id="@+id/dinner_header"  
			            android:layout_width="match_parent"  
			            android:layout_height="match_parent"  
			            android:textStyle="bold"  
			            android:typeface="serif"  
			            android:textSize="18dp"  
			            android:textColor="#000000"
			            android:text="Dinner"  
			            android:gravity="center"  
			            android:layout_span="6"/>  
	            </LinearLayout>
            </TableRow>
            <TableRow>
            	<TextView
			    	android:scrollHorizontally="false"
				   	android:id="@+id/dinner_text"
				   	android:layout_width="fill_parent"
				   	android:layout_height="wrap_content" 
				   	android:inputType="textMultiLine"
				   	android:layout_weight="1"
				   	android:ellipsize="none"
				   	android:textColor="#000000"
				   	android:textSize="14dp"
				   	android:background="#ffffff"
				   	android:gravity="center"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>