<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="#ffdc97"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    	<LinearLayout 
  		android:id="@+id/searchHeader"
  	    android:paddingBottom="0dip"
  	    android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="65dip">
	        <ImageView
	        android:src="@drawable/title"
	        android:paddingBottom="0dip"
	        android:layout_alignParentTop="true"
	        android:layout_width="wrap_content"
	        android:scaleType="centerInside"
	        android:layout_height="65dip"/>
        </LinearLayout>
<RelativeLayout
		android:layout_below="@id/searchHeader"
		android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	<ImageButton 
		android:scaleType="fitXY"
		android:id="@+id/make_search" 
		android:layout_width="50dp"
		android:layout_alignParentRight="true"
		android:layout_height="50dp"
		android:src="@drawable/directory_search" />
  	<EditText 
		android:id="@+id/search_query" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/make_search" />
		</RelativeLayout>
			<ScrollView 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/search_layout">
				<RelativeLayout 
					android:layout_height="wrap_content"
					android:layout_width="fill_parent">
				<TextView 	
					android:layout_alignParentTop="true"
					android:id="@+id/search_prompt" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:text="@string/default_search"
					android:padding="5px" />
				<TextView 	
					android:layout_below="@id/search_prompt"
					android:id="@+id/dept_header" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#ffffff"
					android:background="#000000"
					android:clickable="true"
					android:onClick="showDepartmentResults"
					android:visibility="gone"   
					android:padding="5px" />
				<TextView 	
					android:layout_below="@id/dept_header"
					android:id="@+id/group_header" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#ffffff"
					android:background="#000000"
					android:clickable="true"
					android:onClick="showGroupResults"
					android:visibility="gone"   
					android:padding="5px" />
				<TextView 	
					android:layout_below="@id/group_header"
					android:id="@+id/faculty_header" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#ffffff"
					android:background="#000000" 
					android:clickable="true"
					android:onClick="showFacultyResults"
					android:visibility="gone"  
					android:padding="5px" />
				<TextView 	
					android:layout_below="@id/faculty_header"
					android:id="@+id/students_header" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#ffffff"
					android:background="#000000"
					android:clickable="true"
					android:onClick="showStudentsResults"
					android:visibility="gone"  
					android:padding="5px" />
				<TextView 	
					android:layout_below="@id/students_header"
					android:id="@+id/search_result_items" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:padding="5px" />
				</RelativeLayout>
			</ScrollView>
			<TableLayout
			android:id="@+id/menu_table"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true">
			<TableRow
				android:scaleType="fitXY">
			 <ImageView
				android:scaleType="fitXY"
			 	android:id="@+id/maclists_placeholder"
			 	android:src="@drawable/placeholder_image"
			 	android:gravity="center" 	
	           	android:layout_column="1"
	           	android:paddingLeft="80dip"
	           	android:paddingBottom="25dip" />
	           <ImageView
	           	android:scaleType="fitXY"
	           	android:layout_column="1"
	           	android:padding="3dip" />
	           <ImageView
	           	android:scaleType="fitXY"
	           	android:layout_column="1"
	           	android:padding="3dip" />
	        </TableRow>
		</TableLayout>
</RelativeLayout>
